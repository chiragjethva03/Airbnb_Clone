<% layout("/layout/boilerplate") -%>
    <!-- <h1>all Listings</h1> -->
    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella"></i></div>
            <p>Beach</p>
        </div>
        <div class="filter hide">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic cities</p>
        </div>
        <div class="filter hide">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castles</p>
        </div>
        <div class="filter hide">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
        </div>
        <div class="filter hide">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
        </div>
        <div class="filter hide">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter hide">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        
        <div class="filter hide">
            <div><i class="fa-solid fa-film"></i></div>
            <p>Amazing Views</p>
        </div>
        
        <div class="tax-switch">
            <div class="form-check-reverse form-switch ">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total before taxes</label>
            </div>
        </div>
    </div>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(let list of allListings){ %>
            <a href="/listings/<%= list._id %>" class="linsting-link">
                <div class="card listing-card" style="width: 20.7rem;">
                    <img src="<%= list.image.url %>" class="card-img-top" alt="listings-img" style="height: 20rem;">
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= list.title %></b> <br>
                            &#8377;<%= list.price%>/Night
                            <i class="gst"> +18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

<script>
    let textSwitch = document.getElementById("flexSwitchCheckDefault");
    textSwitch.addEventListener("click", () => {
    let gsts = document.getElementsByClassName("gst");
    for(gst of gsts){
        if(gst.style.display !== "inline"){
            gst.style.display = "inline";
        } else {
            gst.style.display = "none";
        }
        
    }
})
</script>
 